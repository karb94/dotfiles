[user]
    email = 41967813+karb94@users.noreply.github.com
    name = Carles Rafols
[core]
    pager = delta
[alias]
    s = status
    a = add
    c = commit
    p = push
    b = branch
    r = reset
    f = fetch --all --prune
    rh = reset --hard
    ca = commit -a --amend --no-edit
    ch = checkout
    sw = switch
    l = !git --no-pager log -20 --oneline --graph --all
    lf = log --oneline --graph --all
    ls = ls-tree --name-only HEAD
    fls = ls-tree -r --name-only --full-tree HEAD
    df = !git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME
[delta]
    plus-style = "syntax #012800"
    minus-style = "syntax #340001"
    syntax-theme = Monokai Extended
    navigate = true
    line-numbers = true
    side-by-side = false
[interactive]
    diffFilter = delta --color-only
