# Add to path functions
append_to_path() {
    if [ -d "$1" ] && [[ ":$PATH:" != *":$1:"* ]]; then
        PATH="${PATH:+"$PATH:"}$1"
    fi
}
prepend_to_path() {
    if [ -d "$1" ] && [[ ":$PATH:" != *":$1:"* ]]; then
        PATH="$1${PATH:+":$PATH"}"
    fi
}

# Add to path
prepend_to_path "$HOME/.local/bin"
prepend_to_path "$HOME/.local/scripts"

# Locale
export LANG="en_GB.utf8"

# Default XDG Base Directories
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_DATA_DIRS="/usr/local/share:/usr/share"
export XDG_CONFIG_DIRS="/etc/xdg"

# General variables
if command -v nvim > /dev/null 2>&1; then
    export EDITOR=nvim
elif command -v vim > /dev/null 2>&1; then
    export EDITOR=vim
elif command -v vi > /dev/null 2>&1; then
    export EDITOR=vi
fi
export PAGER="less -iR"
export TERMINAL="alacritty"
# export TERMINAL="kitty --single-instance"
export BROWSER="chromium"

# Export less variables to have colored man pages
export LESS_TERMCAP_mb=$'\e[1;32m'
export LESS_TERMCAP_md=$'\e[1;32m'
export LESS_TERMCAP_me=$'\e[0m'
export LESS_TERMCAP_se=$'\e[0m'
export LESS_TERMCAP_so=$'\e[01;33m'
export LESS_TERMCAP_ue=$'\e[0m'
export LESS_TERMCAP_us=$'\e[1;4;31m'

# Aur Utils
export AUR_REPO="aur"
export AUR_DBROOT="/var/cache/pacman/aurpkg"
export AUR_PAGER=less

# Shell variables
export SHELL="/bin/bash"
# History file path
mkdir -p "$HOME/.config/bash"
export HISTFILE="$HOME/.config/bash/history"

