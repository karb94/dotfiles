set editing-mode vi
set keyseq-timeout 200
$if mode=vi
    set show-mode-in-prompt on
    set vi-ins-mode-string \1\e[33;1m\2(ins)\1\e[0m\2
    set keymap vi-insert
    "\C-a": beginning-of-line
    "\C-e": end-of-line
    "lk": vi-movement-mode
    "\C-p": previous-history
    "\C-n": next-history
    "\C-L": clear-screen
    set keymap vi-command
    set vi-cmd-mode-string \1\e[34;1m\2(cmd)\1\e[0m\2
$endif
