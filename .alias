# Not CX1
if [ $HOSTNAME =~ "login-[0-9][0-9]*" ]
then
    alias v='~/usr/local/bin/vim'
else
    alias j='jupyter notebook'
    alias cx1='ssh -t cx1 "~/usr/local/bin/bash -l"'
    alias nhpc='ssh carles@nhpc16.ch.ic.ac.uk'
    alias v='vim'
fi

# White City Desktop
if [ $HOSTNAME == "WCDesktopCarles" ]
then
    alias feh='feh --scale-down --auto-zoom'
    alias p='pacman'
    alias sp='sudo pacman'
fi

# MacAir
if [ $HOSTNAME == "ph-tsm17-13" ]
then
    alias run='runcry14'
    alias runprop='runprop14'
fi

alias ls='ls -pG --group-directories-first --color'
alias lsh='ls -d --group-directories-first --color=auto .*'
alias sv='sudo v'
alias sb='source ~/.bashrc'
alias vb='v ~/.bashrc'
alias vrc='v ~/.vimrc'
alias gitdf='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
alias g='git'
alias gs'git status'
alias ga='git add -u'
alias gb='git branch -avv'
alias gc='git checkout'
alias gp='git push'
alias gl='git log --oneline --graph --all'
alias r='ranger'
alias grep='grep --color=auto'
