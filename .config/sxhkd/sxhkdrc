#
# wm independent hotkeys
#
# Change layouts
# super + backslash
#  ckbl

# quit/restart bspwm
super + shift + {q,r}
 bspc {quit,wm -r}
# Suspend computer
super + shift + s
 systemctl suspend

## terminal emulator
super + t
 alacritty

# Full screen or tiled
super + {f,F,T}
 bspc node -t {~fullscreen,~floating,tiled}

## Web Browser
alt + w
 chromium
## program launcher
super + slash
 rofi -show run

## make sxhkd reload its configuration files:
super + Escape
 pkill -USR1 -x sxhkd

##
## bspwm hotkeys
##

## close and kill
super + {c,backspace}
 bspc node -{c,k}

## Focus the node in the given direction
super + {h,j,k,l}
 bspc node -f {west,south,north,east}

## Swap the node in the given direction
super + m; {h,j,k,l}
 bspc node --swap {west,south,north,east}

## Swap the node in the given direction
super + m; {H,J,K,L}
 bspc node --to-node {west,south,north,east}

# Flip vertically
super + shift + {backslash,minus}
 bspc node @/ --flip {vertical,horizontal}

# Send to the given desktop
super + m; {1-9,0}
 bspc node -d '^{1-9,10}'

# Focus the next occupied workspace
super + {period,comma}
 bspc desktop -f {next,prev}.occupied.local

# Focus or send to the given desktop
super + {1-9,0}
 bspc desktop -f '^{1-9,10}'

# expand a window by moving one of its side outward
super + shift + r: {h,H,j,J,k,K,l,L}
 bspc node -z {left -20 0,left 20 0,bottom 0 20,bottom 0 -20,top 0 -20,top 0 20,right 20 0,right -20 0}

# Rotate workspace
super + r
 bspc node @/ -R 90

# Hide polybar
super + b
 polybar-msg cmd toggle

super + {equal,minus}
 amixer -c 1 -- sset Master playback 10%{+,-}

super + s
 rofi -modi "Test:f.sh" -show Test
super + @p
 xdotool keyup Super_L+p && play &
 # xdotool windowactivate --sync 0x01400007 --clearmodifiers key ctrl+Tab
