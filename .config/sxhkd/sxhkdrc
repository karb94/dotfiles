#
# wm independent hotkeys
#
# Change layouts
super + backslash
 ckbl

# quit/restart bspwm
super + shift + {q,r}
 bspc {quit,wm -r}

## terminal emulator
super + t
 kitty --single-instance

super + {f,F}
 bspc node -t {~fullscreen,~floating}

## Web Browser
super + w
 chromium
## program launcher
super + space
 rofi -show run

## make sxhkd reload its configuration files:
super + Escape
 pkill -USR1 -x sxhkd

##
## bspwm hotkeys
##

## close and kill
super + {c,backspace}
 bspc node -{c,k}

## Focus the node in the given direction
super + {h,j,k,l}
 bspc node -f {west,south,north,east}

## Swap the node in the given direction
super + m; {h,j,k,l}
 bspc node -s {west,south,north,east}

# Send to the given desktop
super + m; {1-9,0}
 bspc node -d '^{1-9,10}'

# Focus the next occupied workspace
super + {period,comma}
 bspc desktop -f {next,prev}.occupied.local

# Focus or send to the given desktop
super + {1-9,0}
 bspc desktop -f '^{1-9,10}'

# expand a window by moving one of its side outward
super + e
 bspc node -z left -20 0
super + ctrl + r: {h,H,j,J,k,K,l,L}
 bspc node -z {left -20 0,left 20 0,bottom 0 20,bottom 0 -20,top 0 -20,top 0 20,right 20 0,right -20 0}

# Rotate workspace
super + r
 bspc node @/ -R 90

# Hide polybar
super + b
 polybar-msg cmd toggle

